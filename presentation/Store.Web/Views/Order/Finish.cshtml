@model OrderModel
@{ 
    ViewData["Title"] = "Order is placed";
}
<p>
    Order is placed. We are packaging it in order to transfer it to the delivery service.
    Wait for SMS.
</p>
<table class="table table-sm table-striped">
    <thread class="thead-dark">
        <tr>
            <th scope="col">№</th>
            <th scope="col">Author</th>
            <th scope="col">Name</th>
            <th scope="col">Quantity</th>
            <th scope="col">Price</th>
        </tr>
    </thread>
    <tbody>
        @for (int i = 0; i < Model.Items.Length; i++)
        {
            <tr>
                <td class="text-right">@(i+1)</td>
                <td>@Model.Items[i].Author</td>
                <td>@Model.Items[i].Title</td>
                <td class="text-right">@Model.Items[i].Count</td>
                <td class="text-right">@Model.Items[i].Price.ToString("0.00")</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3" class="text-right">Total</td>
            <td class="text-right">@Model.TotalCount</td>
            <td class="text-right">@Model.TotalPrice.ToString("0.00")</td>
        </tr>
    </tfoot>
</table>


<strong>Delivery</strong>
<pre>
@Model.DeliveryDescription
</pre>

<strong>Payment</strong>
<pre>
@Model.PaymentDescription
</pre>
<p>
    <a href="@Url.Action("Index", "Home")">Return to the main page.</a>
</p>